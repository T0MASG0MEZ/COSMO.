---
const PACKS = [
    {
        title: "Pack - Tech House",
        description:
            "Gordo, Fisher, Dom Dolla, ACRAZE, Chris Lake, Mau P, Cloone, Dennis Cruz, Eli Brown, James Hype, Andruss, Marrin Inik, Claptone, Classmatic y muchos mas",
        price: "$5.000",
        image: "/techhouseimage.jpg",
    },
    {
        title: "Pack - Afro House",
        description:
            "Keinemusik, BlackCoffe, Adam Port, Maxi Meraki, Liva K, Moojo, Rampa, &ME, Marasi, Wakyin y muchos mas",
        price: "$5.000",
        image: "/afrohouseimage.jpg",
    },
    {
        title: "Pack - Melodic House",
        description:
            "Anyma, Adriatique, John Summit, Camelphat, Argy, RUFUS DU SOL, Layton Giordani, ARTBAT, Mohse, WhoMadeWho, Goom Goom, Kevin de Vries, Monolink, Oostil y muchos mas",
        price: "$5.000",
        image: "/melodiimage.jpg",
    },
    {
        title: "Pack - Tecno House",
        description:
            "Gordo, Fisher, Dom Dolla, ACRAZE, Chris Lake, Mau P, Cloone, Dennis Cruz, Eli Brown, James Hype, Andruss, Marrin Inik, Claptone, Classmatic y muchos mas",
        price: "$5.000",
        image: "/techhouseimage.jpg",
    },
];
---

{
    PACKS.map(({ title, description, image, price }) => (
        <article 
            class="
        flex flex-col gap-4 p-2 m-4 md:flex-row md:max-w-[1440px] mx-auto items-center justify-center"
        >
            <div class="flex flex-col justify-center gap-4 md:p-4 max-w-[440px]">
                <div class="text-center">
                    <h2 class="text-2xl md:text-4xl font-semibold">{title}</h2>
                </div>
                <div>
                    <p class="text-sm md:text-xl text-white/50 text-pretty">
                        {description}
                    </p>
                </div>
                <div class="flex justify-around items-center">
                    <p class="text-2xl md:text-4xl font-bold">{price}</p>
                    <button class="transition-background inline-flex h-10 md:h-12 items-center justify-center rounded-md border border-gray-800 bg-gradient-to-r from-gray-100 via-[#c7d2fe] to-[#8678f9] bg-[length:200%_200%] bg-[0%_0%] px-6 md:px-9 font-medium text-gray-950 duration-500 hover:bg-[100%_200%]">
                        Comprar
                    </button>
                </div>
            </div>
            <picture class="shadow-lg shadow-white/10 rounded-2xl max-w-[300px]">
                <img
                    class="rounded-2xl"
                    src={image}
                    alt="imagen del pack { image }"
                />
            </picture>
        </article>
    ))
}
