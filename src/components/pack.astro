---
const PACKS = [
    {
        title: "Pack - Tecno House",
        description:
            "Gordo, Fisher, Dom Dolla, ACRAZE, Chris Lake, Mau P, Cloone, Dennis Cruz, Eli Brown, James Hype, Andruss, Marrin Inik, Claptone, Classmatic y muchos mas",
        price: "$5.000",
        image: "public/techhouseimage.jpg",
    },
];
---

{
    PACKS.map(({ title, description, image, price }) => (
        <article class="flex flex-col items-center p-2 gap-6 m-4 md:flex-row">
            <div class="flex flex-col justify-center gap-4 p-4">
                <div class="text-center">
                    <h2 class="text-4xl font-semibold">{title}</h2>
                </div>
                <div>
                    <p class="text-xl text-white/50 w-96 text-pretty">{description}</p>
                </div>
                <div class="flex justify-around items-center">
                    <p class="text-4xl font-bold">{price}</p>
                    <button class="transition-background inline-flex h-12 items-center justify-center rounded-md border border-gray-800 bg-gradient-to-r from-gray-100 via-[#c7d2fe] to-[#8678f9] bg-[length:200%_200%] bg-[0%_0%] px-9 font-medium text-gray-950 duration-500 hover:bg-[100%_200%]">
                        Comprar
                    </button>
                </div>
            </div>
            <picture class="size-80 shadow-lg shadow-white/10 rounded-2xl">
                <img class="rounded-2xl" src={image} alt="" />
            </picture>
        </article>
    ))
}
